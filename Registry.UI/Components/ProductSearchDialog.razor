@inherits ProductSearchDialogBase 

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Search products</h5>
                    <button type="button" class="close" data-dismiss="modal" @onclick="@Close" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <DxTextBox @bind-Text="@SearchText" 
                               NullText="Search products" 
                               ClearButtonDisplayMode="@DataEditorClearButtonDisplayMode.Auto"></DxTextBox>
                    <DxDataGrid T="@Models.Product" CustomData="@LoadProducts"
                                PageSize="@InitialPageSize"
                                ShowFilterRow="false"
                                ShowPager="true" 
                                PagerPageSizeSelectorVisible="true" 
                                PagerAllowedPageSizes=@(new int[] {5,10,20,40}) 
                                PagerNavigationMode=PagerNavigationMode.InputBox
                                style="width:100%">
                        <DxDataGridColumn Field="@nameof(Models.Product.Id)">
                        </DxDataGridColumn>
                        <DxDataGridColumn Field="@nameof(Models.Product.Name)">
                        </DxDataGridColumn>
                        <DxDataGridColumn Field="@nameof(Models.Product.Description)">
                        </DxDataGridColumn>
                    </DxDataGrid>

                </div>
            </div>
        </div>
    </div>
}
