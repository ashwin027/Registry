@inherits ProductSearchDialogBase

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Search products</h5>
                    <button type="button" class="close" data-dismiss="modal" @onclick="Close" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="as-flex">
                        <div class="occupy-all-flex">
                            <DxTextBox @bind-Text="@SearchText"
                                       NullText="Search products"
                                       CssClass="search-text"
                                       ClearButtonDisplayMode="@DataEditorClearButtonDisplayMode.Auto"></DxTextBox>
                        </div>
                        <div class="search-button-container">
                            <DxButton RenderStyle="ButtonRenderStyle.Primary" CssClass="search-button" Click="@Search" IconCssClass="fas fa-search right-space">
                            </DxButton>
                        </div>
                    </div>
                    <DxDataGrid T="@Models.Product" CustomData="@LoadProducts" @ref="_gridRef"
                                PageSize="@InitialPageSize"
                                ShowFilterRow="false"
                                ShowPager="true"
                                AutoCollapseDetailRow="true"
                                ShowDetailRow="true"
                                SelectionMode="DataGridSelectionMode.None"
                                PagerPageSizeSelectorVisible="true"
                                PagerAllowedPageSizes=@(new int[] {5,10,20,40})
                                PagerNavigationMode=PagerNavigationMode.InputBox
                                style="width:100%">
                        <Columns>
                            <DxDataGridColumn Field="@nameof(Models.Product.Id)">
                            </DxDataGridColumn>
                            <DxDataGridColumn Field="@nameof(Models.Product.Name)">
                            </DxDataGridColumn>
                            <DxDataGridColumn Field="@nameof(Models.Product.Description)">
                            </DxDataGridColumn>
                        </Columns>
                        <DetailRowTemplate>
                            <DxTabs>
                                <DxTabPage Text="Reviews">
                                    @{
                                        var reviews = OnRowExpanded(context);
                                    }
                                    @if (reviews.Data.Count > 0)
                                    {
                                        @foreach (var review in reviews?.Data)
                                        {
                                            <div class="card border-light mb-3 review-title-container">
                                                <div class="card-header">
                                                    <div class="as-flex">
                                                        <div class="occupy-all-flex review-title">@review?.Title</div>
                                                        <div class="review-date">Submitted on @review?.SubmitDate.ToString("dd/MMM/yyyy")</div>
                                                    </div>
                                                </div>
                                                <div class="card-body">
                                                    <p class="card-text">@review?.Description</p>
                                                </div>
                                            </div>
                                        }
                                        <DxPager PageCount="reviews.TotalPages"
                                                 ActivePageIndex="reviews.PageIndex - 1"
                                                 NavigationMode="PagerNavigationMode.InputBox">
                                        </DxPager>
                                    }
                                    else
                                    {
                                        <em>Loading reviews...</em>
                                    }
                                </DxTabPage>
                            </DxTabs>
                        </DetailRowTemplate>
                    </DxDataGrid>

                </div>
            </div>
        </div>
    </div>
}
